<Page x:Class="coursework01.Pages.AdminPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:coursework01.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="AdminPage">

    <Grid Background="AliceBlue">
        <Grid.RowDefinitions>
            <RowDefinition Height="*"></RowDefinition>
            <RowDefinition Height="70"></RowDefinition>
        </Grid.RowDefinitions>

        <DataGrid Name="MainDG" AutoGenerateColumns="False" SelectionChanged="MainDG_SelectionChanged">
            <DataGrid.Columns>
                <DataGridTextColumn Header="Id" Binding="{Binding Id}" IsReadOnly="True"></DataGridTextColumn>
                <DataGridTextColumn Header="Покупатель" Binding="{Binding CustomerName}" IsReadOnly="True"></DataGridTextColumn>
                <DataGridTextColumn Header="Машина" Binding="{Binding CarName}" IsReadOnly="True"></DataGridTextColumn>
            </DataGrid.Columns>
        </DataGrid>

        <StackPanel Orientation="Horizontal" Grid.Row="1">
            <Button Name="SetPurchaseBTN" Content="Оформить покупку" Style="{StaticResource RegisterButton}" Width="247" Click="SetPurchaseBTN_Click"/>
            <Button Name="RemoveBTN" Content="Удалить заявку" Style="{StaticResource RegisterButton}" Margin="10 0 10 0" Click="RemoveBTN_Click"/>
            <Button Name="ShowCustomers" Content="Вывести клиентов" Style="{StaticResource RegisterButton}" Width="241" Click="ShowCustomers_Click"/>
        </StackPanel>
    </Grid>
</Page>
