<Page x:Class="coursework01.Pages.CatalogPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:coursework01.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="CatalogPage">

    <Grid Name="mainGrid" Background="#f0f9ff">
        <ScrollViewer>
            <StackPanel>
                <StackPanel Orientation="Vertical" VerticalAlignment="Top">
                    <Grid Background="#1e40af" Height="110">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="Auto"/>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="Auto"/>
                        </Grid.ColumnDefinitions>

                        <StackPanel Grid.Column="0" Margin="5">
                            <StackPanel Orientation="Horizontal" Margin="0 0 0 10">
                                <TextBlock Text="От" 
                                       Style="{StaticResource RegisterTextBlock}" Foreground="White" Width="30"></TextBlock>
                                <TextBox Name="MinCostTBox" Style="{StaticResource FilterTextBox}" Width="80" Padding="5"
                                     Background="White" BorderBrush="#93c5fd" TextChanged="MinCostTBox_TextChanged"></TextBox>
                            </StackPanel>

                            <StackPanel Orientation="Horizontal">
                                <TextBlock Text="До" Style="{StaticResource RegisterTextBlock}" Foreground="White" Width="30"></TextBlock>
                                <TextBox Name="MaxCostTBox" Style="{StaticResource FilterTextBox}" Width="80" Padding="5" Background="White"
                                     BorderBrush="#93c5fd" TextChanged="MaxCostTBox_TextChanged"></TextBox>
                            </StackPanel>
                        </StackPanel>

                        <StackPanel Grid.Column="1" HorizontalAlignment="Center" VerticalAlignment="Top">
                            <TextBox Name="SearchTBox" Width="218" Height="32" FontSize="13" Margin="0 10 0 0" Padding="8" Background="White"
                                 BorderBrush="#93c5fd" TextChanged="SearchTBox_TextChanged"></TextBox>
                            <ComboBox Name="MarkCB" Width="150" Height="28" FontSize="14" SelectedIndex="0" Margin="0 8 0 0" Padding="5"
                                  Background="White" BorderBrush="#93c5fd" SelectionChanged="MarkCB_SelectionChanged">
                                <ComboBoxItem Content="Все"></ComboBoxItem>
                                <ComboBoxItem Content="Toyota"></ComboBoxItem>
                                <ComboBoxItem Content="BMW"></ComboBoxItem>
                                <ComboBoxItem Content="Ford"></ComboBoxItem>
                                <ComboBoxItem Content="Hyundai"></ComboBoxItem>
                                <ComboBoxItem Content="Renault"></ComboBoxItem>
                                <ComboBoxItem Content="Fiat"></ComboBoxItem>
                                <ComboBoxItem Content="Volvo"></ComboBoxItem>
                                <ComboBoxItem Content="Kia"></ComboBoxItem>
                                <ComboBoxItem Content="Mercedes-Benz"></ComboBoxItem>
                                <ComboBoxItem Content="Honda"></ComboBoxItem>
                            </ComboBox>
                        </StackPanel>

                        <StackPanel Grid.Column="2" HorizontalAlignment="Right" VerticalAlignment="Top" Margin="5">
                            <Button Name="ProfileBtn" Content="Профиль" Style="{StaticResource RegisterButton}" Margin="0 10 0 0" 
                                Width="119" Height="39" Background="White" Foreground="#1e40af" BorderBrush="#93c5fd" Click="ProfileBtn_Click"/>
                        </StackPanel>
                    </Grid>
                </StackPanel>

                <StackPanel Name="carsStackPanel" Orientation="Vertical" VerticalAlignment="Top" Margin="10"></StackPanel>
            </StackPanel>
        </ScrollViewer>
    </Grid>
</Page>
