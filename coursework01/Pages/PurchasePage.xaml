<Page x:Class="coursework01.Pages.PurchasePage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:coursework01.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="PurchasePage">

    <Grid Background="#f8fafc">
        <Button Name="BackButton" Content="Назад" Style="{StaticResource RegisterButton}" Click="BackButton_Click" HorizontalAlignment="Left"
            VerticalAlignment="Top" Margin="30" Background="White" Foreground="#1e40af" BorderBrush="#93c5fd" BorderThickness="1"
            Padding="12 10" Width="100" FontSize="14"/>

        <Border VerticalAlignment="Center" HorizontalAlignment="Center" Background="White" Padding="40" BorderBrush="#e2e8f0"
            BorderThickness="1" Width="450">

            <StackPanel>
                <TextBlock Text="Оформление продажи" FontSize="24" FontWeight="Bold" HorizontalAlignment="Center" Margin="0 0 0 30"/>
                
                <StackPanel Orientation="Horizontal" Margin="0 0 0 20">
                    <TextBlock Text="Дата продажи" Width="140" VerticalAlignment="Center" FontSize="15"/>
                    <TextBox Name="SaleDateTB" Width="220" Height="35" Padding="10" FontSize="12" BorderBrush="#CCCCCC" BorderThickness="1"
                         VerticalContentAlignment="Center"/>
                </StackPanel>

                <StackPanel Orientation="Horizontal" Margin="0 0 0 20">
                    <TextBlock Text="Цена" Width="140" VerticalAlignment="Center" FontSize="15"/>
                    <TextBox Name="SalePriceTB" Width="220" Height="35" Padding="10" FontSize="12" BorderBrush="#CCCCCC" BorderThickness="1"
                         VerticalContentAlignment="Center"/>
                </StackPanel>

                <StackPanel Orientation="Horizontal" Margin="0 0 0 20">
                    <TextBlock Text="Комиссия" Width="140" VerticalAlignment="Center" FontSize="15"/>
                    <TextBox Name="CommissionTB" Width="220" Height="35" Padding="10" FontSize="12" BorderBrush="#CCCCCC"
                         BorderThickness="1" VerticalContentAlignment="Center"/>
                </StackPanel>

                <StackPanel Orientation="Horizontal" Margin="0 0 0 20">
                    <TextBlock Text="Метод оплаты" Width="140" VerticalAlignment="Center" FontSize="15"/>
                    <ComboBox Name="PaymentMethodCB" Width="220" Height="35" Padding="8" FontSize="15" BorderBrush="#CCCCCC"
                          BorderThickness="1" VerticalContentAlignment="Center" SelectedIndex="0">
                        <ComboBoxItem Content="карта"/>
                        <ComboBoxItem Content="наличные"/>
                    </ComboBox>
                </StackPanel>

                <StackPanel Orientation="Horizontal" Margin="0 0 0 25">
                    <TextBlock Text="Сотрудник" Width="140" VerticalAlignment="Center" FontSize="15"/>
                    <ComboBox Name="EmployeeCB" Width="220" Height="35" Padding="8" FontSize="15" BorderBrush="#CCCCCC" BorderThickness="1"
                          VerticalContentAlignment="Center"/>
                </StackPanel>

                <Button Name="SetSaleBTN" Content="Оформить продажу" Style="{StaticResource RegisterButton}" Click="SetSaleBTN_Click"
                    Background="#1e40af" Foreground="White" FontSize="16" FontWeight="SemiBold" Padding="20 12" Height="45" Margin="0 20 0 0"/>
            </StackPanel>
        </Border>
    </Grid>
</Page>
