<Application x:Class="coursework01.App"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:local="clr-namespace:coursework01"
             StartupUri="MainWindow.xaml">
    <Application.Resources>
        
        <Style TargetType="TextBox" x:Key="RegisterTextBox">
            <Setter Property="Width" Value="338"></Setter>
            <Setter Property="Height" Value="30"></Setter>
            <Setter Property="FontSize" Value="20"></Setter>
        </Style>

        <Style TargetType="PasswordBox" x:Key="RegisterPasswordBox">
            <Setter Property="Width" Value="338"></Setter>
            <Setter Property="Height" Value="30"></Setter>
            <Setter Property="FontSize" Value="20"></Setter>
        </Style>

        <Style x:Key="RegisterTextBlock" TargetType="TextBlock">
            <Setter Property="FontSize" Value="20"></Setter>
            <Setter Property="Margin" Value="0 0 10 0"></Setter>
            <Setter Property="Foreground" Value="Red"></Setter>
        </Style>

        <Style x:Key="RegisterButton" TargetType="Button">
            <Setter Property="Width" Value="196"></Setter>
            <Setter Property="Height" Value="51"></Setter>
            <Setter Property="FontSize" Value="25"></Setter>
            <Setter Property="Background" Value="Blue"></Setter>
            <Setter Property="Foreground" Value="Red"></Setter>
        </Style>
        
    </Application.Resources>
</Application>
